<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

    <url>
        <loc>{{ baseUrl }}/</loc>
        <lastmod>{{ generatedAt|date('Y-m-d') }}</lastmod>
    </url>

    {% for plugin in plugins %}

        {# Plugin-Ãœbersicht #}
        <url>
            <loc>{{ baseUrl }}/{{ plugin.slug }}/</loc>
            <lastmod>
                {% if plugin.updatedAt is not null %}
                    {{ plugin.updatedAt|date('Y-m-d') }}
                {% else %}
                    {{ generatedAt|date('Y-m-d') }}
                {% endif %}
            </lastmod>
        </url>

        {# Latest #}
        <url>
            <loc>{{ baseUrl }}/{{ plugin.slug }}/latest/</loc>
            <lastmod>
                {% if plugin.updatedAt is not null %}
                    {{ plugin.updatedAt|date('Y-m-d') }}
                {% else %}
                    {{ generatedAt|date('Y-m-d') }}
                {% endif %}
            </lastmod>
        </url>

        {# Alle Versionen #}
        {% for version in plugin.versions %}
            <url>
                <loc>{{ baseUrl }}/{{ plugin.slug }}/{{ version }}/</loc>
                <lastmod>
                    {% if plugin.updatedAt is not null %}
                        {{ plugin.updatedAt|date('Y-m-d') }}
                    {% else %}
                        {{ generatedAt|date('Y-m-d') }}
                    {% endif %}
                </lastmod>
            </url>
        {% endfor %}

    {% endfor %}

</urlset>
