<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

    <url>
        <loc>{{ baseUrl }}/</loc>
        <lastmod>{{ generatedAt|date('Y-m-d') }}</lastmod>
    </url>

    {% for plugin in plugins %}
        <url>
            <loc>{{ baseUrl }}/{{ plugin.slug }}/</loc>
            {% if plugin.updatedAt is not null %}
                <lastmod>{{ plugin.updatedAt|date('Y-m-d') }}</lastmod>
            {% endif %}
        </url>
        <url>
            <loc>{{ baseUrl }}/{{ plugin.slug }}/latest/</loc>
            {% if plugin.updatedAt is not null %}
                <lastmod>{{ plugin.updatedAt|date('Y-m-d') }}</lastmod>
            {% endif %}
        </url>
    {% endfor %}

</urlset>
